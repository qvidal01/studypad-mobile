# StudyPad Mobile Environment Configuration
# Copy this file to .env and update with your values

# ==================== API Configuration ====================

# Backend API URL (development)
# For Android Emulator: http://10.0.2.2:8011
# For iOS Simulator: http://localhost:8011
# For Physical Device: http://YOUR_MACHINE_IP:8011
API_BASE_URL=http://localhost:8011

# Backend API URL (production)
API_BASE_URL_PROD=https://api.studypad.yourdomain.com

# Environment mode (development/production)
ENVIRONMENT=development

# ==================== API Settings ====================

# Connection timeout in seconds
CONNECTION_TIMEOUT=30

# Receive timeout in seconds
RECEIVE_TIMEOUT=30

# Send timeout in seconds (for uploads)
SEND_TIMEOUT=60

# Maximum upload file size in MB
MAX_UPLOAD_SIZE_MB=10

# ==================== Feature Flags ====================

# Enable debug logging
DEBUG_LOGGING=true

# Enable offline mode
OFFLINE_MODE=true

# Enable push notifications
PUSH_NOTIFICATIONS=false

# ==================== Analytics & Monitoring ====================

# Enable analytics (when implemented)
ANALYTICS_ENABLED=false

# Analytics API key (if applicable)
# ANALYTICS_API_KEY=your_api_key_here

# Crash reporting (if applicable)
# SENTRY_DSN=your_sentry_dsn_here

# ==================== Storage Configuration ====================

# Local database name
DB_NAME=studypad_local

# Cache duration in hours
CACHE_DURATION_HOURS=24

# Maximum cache size in MB
MAX_CACHE_SIZE_MB=100

# ==================== Notes ====================

# This file should NOT be committed to version control
# Add .env to .gitignore
# Update lib/config/api_config.dart to read from environment variables if needed
